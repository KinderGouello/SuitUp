# Expo & React Native Compatibility
# These packages need to be hoisted for proper native module resolution
shamefully-hoist=true
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=@react-native*
public-hoist-pattern[]=@expo*

# Peer Dependencies
# Auto-install peer dependencies to avoid manual intervention
auto-install-peers=true
strict-peer-dependencies=false

# Performance
# Shared store location for all projects
store-dir=~/.pnpm-store

# Lockfile
# Ensure consistent installation across environments
frozen-lockfile=false
