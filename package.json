{
  "name": "suitup-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "SuitUp - Wardrobe management and weather-based outfit recommendations",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:mobile": "turbo run dev --filter=@suitup/mobile",
    "dev:api": "turbo run dev --filter=@suitup/api",
    "build": "turbo run build",
    "build:mobile": "turbo run build --filter=@suitup/mobile",
    "build:api": "turbo run build --filter=@suitup/api",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3"
  }
}
